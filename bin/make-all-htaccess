#!/bin/sh

mkdir -p "$(dirname $0)"/../dist/htaccess.all/
rm -fr "$(dirname $0)"/../dist/htaccess.all/*
cd "$(dirname $0)"/../dist/htaccess.all/
    for cluster in tootsville.org tootsville.ga tootsville.gc ; do
        echo '{' >> $cluster.cluster.json
        for host in www play gossip world users ; do
            sed ../../htaccess.base -e s/@@HOST@@/$host/g \
                -e s/@@CLUSTER@@/$cluster/g \
                | grep -v 'RedirectMatch ^/[a-z].* https://'$host'.' \
                       > $host.$cluster.htaccess
            echo "\"$host\": \"$host.$cluster\"," >> $cluster.cluster.json
        done
    done
    echo '"productionP":true,"developmentP":false}' >> tootsville.org.cluster.json
    echo '"productionP":false,"developmentP":true}' >> tootsville.ga.cluster.json
    echo '"productionP":false,"developmentP":true}' >> tootsville.gc.cluster.json

